{
  "name": "Forecast",
  "version": "0.1",
  "description": "Mock requests on the fly",
  "devtools_page": "devtools.html",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs", 
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["foo.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["sinon.js", "foo.js", "bar.js"]
}
