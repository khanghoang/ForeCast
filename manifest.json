{
  "name": "The Vision",
  "version": "0.1",
  "description": "Mock requests on the fly",
  "devtools_page": "devtools.html",
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "options_page": "./dist/index.html",
  "content_security_policy": "script-src 'self'; object-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;",
  "permissions": [
    "tabs", 
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["foo.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["sinon.js", "foo.js", "bar.js"]
}
